<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_searchbar_height"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/back_imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/back_search_result_page_header"
        android:paddingLeft="7dp"
        android:paddingRight="8dp"
        android:src="@drawable/icon_a1_selector"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/close_imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/close_search_result_page_header"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:src="@drawable/icon_a2_selector"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/divider_line_imageview"
        android:layout_width="1px"
        android:layout_height="20dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/close_imageview"
        android:background="@drawable/common_line"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/divider_line_imageview"
        android:layout_toRightOf="@+id/back_imageview"
        android:clickable="true"
        android:contentDescription="@string/search_search_result_page_header"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/search_search_result_page_header"
        android:textColor="@color/f_c_2"
        android:textSize="@dimen/default_font_size_t32" />

    <com.autonavi.bundle.vui.common.emojiview.VUIEmojiView
        android:id="@+id/btn_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/title_bar_back_padding"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/divider_line_imageview"
        android:contentDescription="@string/voice_input"
        android:visibility="gone" />
</RelativeLayout>
